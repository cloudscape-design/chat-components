{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "incremental": true,
    "target": "ES2015",
    "jsx": "react-jsx",
    "types": [],
    "lib": ["ES2021", "DOM"],
    "module": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "outDir": "lib/components",
    "declaration": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "tsBuildInfoFile": "./.cache/source.tsbuildinfo"
  },
  "include": ["src", "types"],
  "exclude": ["**/__tests__/**", "src/test-utils/**"]
}
